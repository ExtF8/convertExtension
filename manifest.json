{
    "manifest_version": 3,
    "name": "Converter",
    "version": "1.0",
    "description": "Converts currencies and clothing measurements",
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_title": "Click to open side panel"
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "permissions": ["storage", "activeTab", "sidePanel"],
    "icons": {
        "128": "./icons/S_skrastin_logo.png"
    }
}
